@unpublished{Cabus2012,
abstract = {School absenteeism (or truancy) may be a signal of an ongoing process of student attrition that eventually leads to early school leaving. This paper estimates by a du-ration model the in uence of school absenteeism on the risk of dropout in secondary education. In particular, using a semiparametric Cox duration model, the timing of the dropout decision of truants is compared with the timing of regular school attendees. Using administrative data with insights on wrongly speci{\ldots}cied truancy spells, we correct in a Baysian duration model for issues on data uncertainty. We show that only a Baysian structure on the data yields insightful and consistent results. The analyis provides evi-dence of poor data validity on post-compulsory secondary school students aged 18 years old or older. Moreover, the results indicate that school-aged students enrolled in voca-tional education are most vulnarable to unauthorized school absenteeism and dropout. A relative risk ratio of 1.374 signi{\ldots}cant at 1{\%}-level is estimated, indicating that truants are 37.4 percent more likely to dropout of school than regular school attendees. We are grateful to Wim Groot, Henri{\"{e}}tte Maassen van den Brink and TIER seminar participants for useful comments and discussions. We would like to thank Orm Muilwijk of DMO Amsterdam and the Dutch Ministry of Education for providing the data. The authors acknowledge {\ldots}nancial support of NICIS. The usual caveat applies.},
author = {Cabus, So{\ldots}e J and {De Witte}, Kristof},
keywords = {Baysian duration model,Early school leaving Jel,I21,I28,School absenteeism},
title = {{School absenteeism and Dropout -A Baysian duration model}},
url = {https://espe.conference-services.net/resources/321/2907/pdf/ESPE2012{\_}0184{\_}paper.pdf},
year = {2012}
}
