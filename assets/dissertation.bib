author = {Enos, Ryan D and Fowler, Anthony},
doi = {10.1017/S0022381613001308},
journal = {The Journal of Politics},
number = {1},
pages = {273--288},
title = {{Increasing Inequality: The Effect of GOTV Mobilization on the Composition of the Electorate}},
url = {https://scholar.harvard.edu/files/renos/files/enosfowlervavreck.pdf},
volume = {76},
